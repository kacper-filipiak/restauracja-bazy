<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">
    <VBox>
        <HBox>

            <VBox>
        <HBox>
            <Label text="Nazwa"/>
            <ComboBox id="skladnikNazwaComboBox"/>
            <Label text="Ilosc"/>
            <TextField id="skladnikIloscComboBox"/>
            <Button id="dodajBtn" styleClass="padding-button" text="Dodaj"/>
            <Button id="usunBtn" styleClass="padding-button" text="Usuń"/>
        </HBox>
            <TableView id="skladnikTable">
                <columns>
                    <TableColumn text="Nazwa"/>
                    <TableColumn text="Ilość"/>
                </columns>
            </TableView>
            </VBox>
        <HBox>
            <Label text="Nazwa"/>
            <TextField id="nazwaTextField"/>
        </HBox>
        <HBox>
            <Label text="Cena"/>
            <TextField id="cenaTextField"/>
        </HBox>
        </HBox>
        <HBox>
            <Button styleClass="padding-button" text="Cofnij" onAction="#onCancel"/>
            <Button styleClass="padding-button" text="Zatwierdz" onAction="#onZatwierdzDodajPozycje"/>
        </HBox>
    </VBox>
</AnchorPane>
