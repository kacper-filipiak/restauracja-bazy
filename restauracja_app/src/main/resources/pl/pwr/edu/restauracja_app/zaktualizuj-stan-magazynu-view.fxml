<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">
    <VBox>
        <HBox>
            <TableView id="produktTable">
                <columns>
                    <TableColumn text="Nazwa"/>
                    <TableColumn text="Ilość"/>
                    <TableColumn text="Jednostka"/>
                    <TableColumn text="Data ważności"/>
                </columns>
            </TableView>
            <VBox>
                <HBox>
                    <Label text="Ilość"/>
                    <TextField id="iloscTextField"/>
                </HBox>
            </VBox>
        </HBox>
        <HBox>
            <Button styleClass="padding-button" text="Dodaj" onAction="#onDodajProdukt"/>
            <Button styleClass="padding-button" text="Cofnij" onAction="#onCancel"/>
            <Button styleClass="padding-button" text="Zatwierdz" onAction="#onZatwierdzZaktualizujStanMagazynu"/>
        </HBox>
    </VBox>
</AnchorPane>
